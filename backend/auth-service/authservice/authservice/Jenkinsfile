pipeline {
    agent any

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/RamyaAgali/smarttrip-ai-travel-planner'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    dir('backend/auth-service/authservice/authservice') {
                        sh 'docker build -t auth-service-image:latest .'
                    }
                }
            }
        }

        stage('Stop Old Container') {
            steps {
                script {
                    sh '''
                    if [ $(docker ps -aq -f name=auth-service) ]; then
                        docker rm -f auth-service || true
                    fi
                    '''
                }
            }
        }

        stage('Run New Container') {
            steps {
                script {
                    sh '''
                    docker run -d \
                        --name auth-service \
                        -p 8081:8081 \
                        auth-service-image:latest
                    '''
                }
            }
        }
    }

    post {
        success {
            echo 'Auth Service Deployed Successfully üéâ'
        }
        failure {
            echo 'Auth Service Deployment Failed ‚ùå'
        }
    }
}